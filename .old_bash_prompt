# Normal Foreground Colors
Color1_k="\033[0;30m" # Black
Color1_r="\033[0;31m" # Red
Color1_g="\033[0;32m" # Green
Color1_y="\033[0;33m" # Yellow
Color1_b="\033[0;34m" # Blue
Color1_p="\033[0;35m" # Purple
Color1_c="\033[0;36m" # Cyan
Color1_w="\033[0;37m" # White

# Bright Foreground Colors
Color2_k="\033[1;30m" # Dark gray
Color2_r="\033[1;31m" # Red
Color2_g="\033[1;32m" # Green
Color2_y="\033[1;33m" # Yellow
Color2_b="\033[1;34m" # Blue
Color2_p="\033[1;35m" # Purple
Color2_c="\033[1;36m" # Cyan
Color2_w="\033[1;37m" # White
Color2_x="\033[1;39m" # Default

# Background Colors
BgColor_k="\033[40m" # Dark gray
BgColor_r="\033[41m" # Red
BgColor_g="\033[42m" # Green
BgColor_y="\033[43m" # Yellow
BgColor_b="\033[44m" # Blue
BgColor_p="\033[45m" # Purple
BgColor_c="\033[46m" # Cyan
BgColor_w="\033[47m" # White
BgColor_x="\033[49m" # Default

# Styles
Style_n="\033[0m" # normal
Style_b="\033[1m" # bold
Style_u="\033[4m" # underline
Style_i="\033[7m" # inverse

ALERT=${Color2_w}${BgColor_r} # Bold White on red background


colorz() {
    echo -e "${Color1_k}blak1 from bash! ${Color2_k}blak2 from bash! ${Style_n} (or something)"
    echo -e "${Color1_r}redd1 from bash! ${Color2_r}redd2 from bash! ${Style_n} (or something)"
    echo -e "${Color1_g}gren1 from bash! ${Color2_g}gren2 from bash! ${Style_n} (or something)"
    echo -e "${Color1_y}yelr1 from bash! ${Color2_y}yelr2 from bash! ${Style_n} (or something)"
    echo -e "${Color1_b}blue1 from bash! ${Color2_b}blue2 from bash! ${Style_n} (or something)"
    echo -e "${Color1_p}purp1 from bash! ${Color2_p}purp2 from bash! ${Style_n} (or something)"
    echo -e "${Color1_c}cyan1 from bash! ${Color2_c}cyan2 from bash! ${Style_n} (or something)"
    echo -e "${Color1_w}wite1 from bash! ${Color2_w}wite2 from bash! ${Style_n} (or something)"
    echo -e ""
    echo -e "${ALERT}Alert! Alert! Alert!${Style_n}"
}


PS1="\n\u @ ${MACHINE_NAME} [ \D{%Y-%m-%d} - \t - \# ] \w $ "

PromptColor=""
if [ "${MACHINE_NAME}" == "cronus" ]; then
    PromptColor="${Color1_y}"
elif [ "${MACHINE_NAME}" == "morpheus" ]; then
    PromptColor="${Color1_g}"
elif [ "${MACHINE_NAME}" == "basilisk" ]; then
    PromptColor="${Color1_g}"
elif [ "${MACHINE_NAME}" == "rojo" ]; then
    PromptColor="${Color1_r}"
fi


# if prompt color is non-zero (has been set)
if [ -n "$PromptColor" ]; then
    
    export PS1="\n\[${BgColor_x}${Style_u}${PromptColor}\]\u @ ${MACHINE_NAME}\[${Style_n}\] [ \D{%Y-%m-%d} - \t - \# ] \w $ "

    # prompt code
    if [ "$SSH_CLIENT" ]
    then
        whattty=`tty | sed 's,/dev/,,'`
        fromhost=`who|grep "$whattty "|sed -n 's,.*(\([^:]*\)).*,\1,p'` 
        
        # when we SSH in, 
        # the user @ hostname colors are inverted
        # 
        # example:
        # if you're on cronus, it's yellow text on black background
        # if you're sshed into cronus, its black text on a yellow background
        export PS1="\n\[${BgColor_x}${Style_i}${PromptColor}\]\u @ ${MACHINE_NAME} via "$fromhost"\[${Style_n}\] [ \D{%Y-%m-%d} - \t - \# ] \w $ "
    fi
fi

