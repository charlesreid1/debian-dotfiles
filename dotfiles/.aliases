# tinc vpn
# ---------------

alias seawatervpn="seawatervpn"
function seawatervpn() {
  ssh-agent > ~/ssh.file # env vars in ssh.file
  chmod +x ~/ssh.file # execute file
  ~/ssh.file > /dev/null
  rm -f ~/ssh.file
  export IP="192.168.30.1"
  ssh -p 5778 -Y charles@${IP} # the actual ssh call
}

